{
  "compilerOptions": {
    "target": "ES2018", // Changed from ES6 to ES2018 for broader compatibility with modern features
    "module": "ESNext", // Changed from ES6 to ESNext, generally preferred with bundlers like Webpack
    "lib": ["ES2018", "DOM"], // ADDED: Explicitly include ES2018 (or higher like ESNext) for Array.prototype.includes and DOM for browser APIs
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}